{
  "type": "object",
  "patternProperties": {
    "^[a-z_0-9]+$": {
      "type": "object",
      "properties": {
        "default_stats": { "$ref": "./parts/stats.json" },
        "is_large": { "type": "boolean" },
        "unarmed": { "$ref": "./parts/unarmed_type.json" },
        "attack_set": { "$ref": "./parts/attack_set.json" },
        "aggressive_by_default": { "type": "boolean" },
        "tameable": { "type": "boolean" },
        "badly_hurt_behavior": {
          "enum": [ "fearful", "determined" ]
        },
        "variant_groups": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "variant": { "$ref": "./parts/name_id.json" },
                "weight": { "type": "integer", "minimum": 0 }
              },
              "additionalProperties": false,
              "required": [ "variant", "weight" ]
            }
          }
        }
      },
      "additionalProperties": false,
      "required": [ "default_stats", "unarmed", "attack_set" ]
    }
  },
  "additionalProperties": false
}
