{
  "type": "object",
  "patternProperties": {
    "^[a-z_0-9]+$": {
      "type": "object",
      "properties": {
        "weapon": {
          "type": "object",
          "properties": {
            "damage_mod": { "type": "number", "minimum": 2 },
            "attack_set": { "$ref": "./parts/attack_set.json" },
            "stun_attack": { "type": "boolean" }
          },
          "additionalProperties": false,
          "required": [ "damage_mod", "attack_set" ]
        },
        "usage": {
          "type": "object",
          "oneOf": [
            {
              "properties": {
                "type": { "const": "medkit" },
                "restore_fraction": { "type": "number", "minimum": 0, "maximum": 1 }
              },
              "additionalProperties": false,
              "required": [ "restore_fraction" ]
            },
            {
              "properties": {
                "type": { "const": "black_orb" },
                "change": { "$ref": "./parts/stat_changes.json" }
              },
              "additionalProperties": false,
              "required": [ "change" ]
            },
            {
              "properties": {
                "type": { "const": "odd_hand_mirror" },
                "sum_change": { "type": "integer" }
              },
              "additionalProperties": false,
              "required": [ "sum_change" ]
            }
          ],
          "required": [ "type" ]
        },
        "price": { "type": "integer", "minimum": 0 },
        "extra_description": { "type": "string" },
        "shop_description": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
